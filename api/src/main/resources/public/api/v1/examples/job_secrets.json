{
  "id": "job-env-secret",
  "description": "job example with env based secrets",
  "labels": {},
  "run": {
    "cpus": 0.01,
    "mem": 32,
    "disk": 0,
    "cmd": "echo $SECRET_ENV >> $MESOS_SANDBOX/secret-env; sleep 5",
    "env": {
      "SECRET_ENV": {
        "secret": "secret1"
      }
    },
    "secrets": {
      "secret1": {
        "source": "/mysecret"
      }
    }
  }
}
